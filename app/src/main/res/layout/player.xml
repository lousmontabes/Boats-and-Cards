<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shadowImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/boatImageView"
        android:layout_alignEnd="@+id/boatImageView"
        android:layout_alignStart="@+id/boatImageView"
        android:layout_alignTop="@+id/boatImageView"
        android:padding="11dp"
        app:srcCompat="@drawable/basicboat" />

    <ImageView
        android:id="@+id/boatImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:srcCompat="@drawable/basicboat"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>