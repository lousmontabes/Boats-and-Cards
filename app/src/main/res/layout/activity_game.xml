<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lluismontabes.gameofboatsandcards.GameActivity"
    android:background="@drawable/sea">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="2:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timer"
                android:gravity="center"
                android:textSize="36sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="0%"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCounter1"
                    android:layout_above="@+id/textViewCounter2"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:paddingRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView4"
                    android:id="@+id/textViewCounter2"
                    android:text="0%"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/log"
            android:text="Starting" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/frameLog" />

        <ImageView
            app:srcCompat="@drawable/treasure"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/treasureImageView"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <com.example.lluismontabes.gameofboatsandcards.Joystick
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/joystick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    </com.example.lluismontabes.gameofboatsandcards.Joystick>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardLayout"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/void_card_resized"
            android:id="@+id/card1"
            android:layout_gravity="bottom"
            android:background="#00000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/void_card_resized"
            android:id="@+id/card2"
            android:layout_gravity="bottom"
            android:background="#00000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/void_card_resized"
            android:id="@+id/card3"
            app:layout_anchorGravity="bottom|center_horizontal"
            android:layout_gravity="bottom"
            android:background="#00000000" />
    </LinearLayout>

</RelativeLayout>